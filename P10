#define _CRT_SECURE_NO_WARNINGS 1 
#include<stdio.h>
#include<string.h>

void Add(int a, int b) {
	int sum;
	sum = a + b;
	printf("the sum is %d\n", sum);
}

int get_max(int a, int b) {
	if (a > b) {
		return a;
	}
	else {
		return b;
	}
}

void Swap1(int a, int b) {
	int tmp = 0;
	tmp = a;
	a = b;
	b = tmp;
}

void Swap2(int* pa, int* pb) {
	int tmp = 0;
	tmp = *pa;
	*pa = *pb;
	*pb = tmp;
}

